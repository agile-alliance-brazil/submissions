- title t('title.edit_profile', user: @user.username)
- show_actions!
.auto_focus

- if @user_profile_outdated
  .form_tip
    = t('text.users.update_profile_to_submit_session').html_safe

= semantic_form_for resource, as: resource_name, url: registration_path(resource_name), html: {method: :put} do |form|
  - if !!params[:update_password]
    = render 'change_password', form: form
    = form.actions do
      = form.action :submit, label: :change_password, button_html: {tabindex: autotab}
  - else
    = render 'form', form: form
    = form.actions do
      = form.action :submit, label: :edit_profile, button_html: {tabindex: autotab}
